import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.ArrayList;
import java.util.List;

class Employee {
    private String name;
    private String employeeNumber;
    private List<TimesheetData> timesheetData;

    public Employee(String name, String employeeNumber) {
        this.name = name;
        this.employeeNumber = employeeNumber;
        this.timesheetData = new ArrayList<>();
    }

    public void addTimesheetData(LocalDate date, double hoursWorked) {
        TimesheetData data = new TimesheetData(date, hoursWorked);
        timesheetData.add(data);
    }

    public double calculateTotalWorkedHours() {
        double totalHours = 0;
        for (TimesheetData data : timesheetData) {
            totalHours += data.getHoursWorked();
        }
        return totalHours;
    }

    public double calculateGrossPay() {
        // Assume a fixed hourly rate of Php 1500.00
        double hourlyRate = 1500.00;
        double totalHours = calculateTotalWorkedHours();
        return totalHours * hourlyRate;
    }

    public Deductions calculateDeductions() {
        // Assume fixed deductions
        double sssDeduction = 900.00;
        double pagIbigDeduction = 100.00;
        double philhealthDeduction = 1200.00;
        double incomeTaxDeduction = 18509.94;
        return new Deductions(sssDeduction, pagIbigDeduction, philhealthDeduction, incomeTaxDeduction);
    }

    public double calculateNetPay() {
        double grossPay = calculateGrossPay();
        Deductions deductions = calculateDeductions();
        double totalDeductions = deductions.getTotalDeductions();
        return grossPay - totalDeductions;
    }

    public String getName() {
        return name;
    }

    public String getEmployeeNumber() {
        return employeeNumber;
    }
}

class TimesheetData {
    private LocalDate date;
    private double hoursWorked;

    public TimesheetData(LocalDate date, double hoursWorked) {
        this.date = date;
        this.hoursWorked = hoursWorked;
    }

    public LocalDate getDate() {
        return date;
    }

    public double getHoursWorked() {
        return hoursWorked;
    }
}

class Deductions {
    private double sssDeduction;
    private double pagIbigDeduction;
    private double philhealthDeduction;
    private double incomeTaxDeduction;

    public Deductions(double sssDeduction, double pagIbigDeduction, double philhealthDeduction, double incomeTaxDeduction) {
        this.sssDeduction = sssDeduction;
        this.pagIbigDeduction = pagIbigDeduction;
        this.philhealthDeduction = philhealthDeduction;
        this.incomeTaxDeduction = incomeTaxDeduction;
    }

    public double getSssDeduction() {
        return sssDeduction;
    }

    public double getPagIbigDeduction() {
        return pagIbigDeduction;
    }

    public double getPhilhealthDeduction() {
        return philhealthDeduction;
    }

    public double getIncomeTaxDeduction() {
        return incomeTaxDeduction;
    }

    public double getTotalDeductions() {
        return sssDeduction + pagIbigDeduction + philhealthDeduction + incomeTaxDeduction;
    }
}

public class PayrollSystem {
    public static void main(String[] args) {
        Employee employee = new Employee("Juan", "10001");
        employee.addTimesheetData(LocalDate.of(2025, 1, 1), 8);
        employee.addTimesheetData(LocalDate.of(2025, 1, 2), 8);
        employee.addTimesheetData(LocalDate.of(2025, 1, 3), 8);

        String cutOffPeriod = "01-01-2025 - 01-15-2025";
        double totalWorkedHours = employee.calculateTotalWorkedHours();
        double grossPay = employee.calculateGrossPay();
        Deductions deductions = employee.calculateDeductions();
        double netPay = employee.calculateNetPay();

        System.out.println("|           PAYROLL 		        		|");
        System.out.println("----------------------------------------");
        System.out.println("| Name: " + employee.getName() + "                         			|");
        System.out.println("| Employee No.: " + employee.getEmployeeNumber() + "            		|");
        System.out.println("| Cut off Period: " + cutOffPeriod + "    	|");
        System.out.println("----------------------------------------");
        System.out.println("| Total Worked Hours:    " + String.format("%.2f", totalWorkedHours) + " hrs    		|");
        System.out.println("| Gross Pay:             Php " + String.format("%.2f", grossPay) + "    	|");
        System.out.println("----------------------------------------");
        System.out.println("| SSS Deduction:         Php " + String.format("%.2f", deductions.getSssDeduction()) + "     	|");
        System.out.println("| Pag-IBIG Deduction:    Php " + String.format("%.2f", deductions.getPagIbigDeduction()) + "     	|");
        System.out.println("| PhilHealth Deduction:  Php " + String.format("%.2f", deductions.getPhilhealthDeduction()) + "    	|");
        System.out.println("| Income Tax Deduction:  Php " + String.format("%.2f", deductions.getIncomeTaxDeduction()) + "    	|");
        System.out.println("----------------------------------------");
        System.out.println("| Net Pay:               Php " + String.format("%.2f", netPay) + "     		|");
        System.out.println("----------------------------------------");
    }
}
